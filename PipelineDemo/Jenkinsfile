pipeline {
    agent any
    environment{
        user = "Bharath"
        secret = credentials('ID00')
    }
	parameters{
	    choice(name: 'VERSION',choices:['1.1.0','1.2.0','1.3.0'], description:'')
	    booleanParam(name: 'executeTests', defaultValue:true, description:'')
	}

    stages{
        stage("build"){
            steps{
                echo 'building app'
                echo "User is : ${user}"
            }      
        }
        stage("test"){
        when{
            expression{
                params.executeTests == true
            }

        }
            steps{
               input("Continue?") 
               echo "WORKING ON ${GIT_BRANCH}"
            }

        }
        stage("deploy"){
            steps{
             echo "Password is :${secret}"   
            }
        }
        stage("multiple"){
            parallel {
                stage("Unit test"){
                    echo "IN SIDE UNIT"
                    
                }
			stage('Integration test'){
			    echo "IN SIDE INTEGRATION"
			}

            }
            
        }


    }
   post{

       always {
           echo"This is executed everything"
       }
		failure{    
		    echo "Failed"
		}
		success{
		    echo "Success"
		}
   }
}